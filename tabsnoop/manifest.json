{
  "manifest_version": 3,
  "name": "TabSnoop",
  "version": "1.0",
  "description": "Tracks time spent on each browser tab.",
  "permissions": ["tabs", "storage", "scripting", "idle"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}